<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestActivity">

    <Button
        android:id="@+id/buttonTrue"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginEnd="@dimen/buttonSide"
        android:text="@string/Buttontrue"
        app:layout_constraintBottom_toBottomOf="@+id/buttonFalse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toEndOf="@+id/buttonFalse"
        app:layout_constraintTop_toTopOf="@+id/buttonFalse"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonClap"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:text="@string/ButtonClap"
        app:layout_constraintBottom_toBottomOf="@+id/buttonQuestion"
        app:layout_constraintEnd_toEndOf="@+id/buttonTrue"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonTrue"
        app:layout_constraintTop_toTopOf="@+id/buttonQuestion"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonFalse"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/buttonSide"
        android:layout_marginTop="140dp"
        android:text="@string/ButtonFalse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonQuestion"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:text="@string/ButtonQuestion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonFalse"
        app:layout_constraintStart_toStartOf="@+id/buttonFalse"
        app:layout_constraintTop_toBottomOf="@+id/buttonFalse"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/transforanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="@string/anwerer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>